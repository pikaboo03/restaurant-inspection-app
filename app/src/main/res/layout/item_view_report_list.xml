<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_hazard_rating"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="22dp"
        android:adjustViewBounds="true"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        app:srcCompat="@drawable/haz_high" />

    <TextView
        android:id="@+id/txt_report_descrip"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="7dp"
        android:layout_toEndOf="@+id/icon_hazard_rating"
        android:text="@string/report_list_fill"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txt_hazard_level"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_hazard_rating"
        android:layout_alignEnd="@+id/icon_hazard_rating"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-29dp"
        android:text="@string/hazard_level"
        android:textSize="15dp" />
</RelativeLayout>
