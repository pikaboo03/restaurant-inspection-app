<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/updated_favourite_newest_inspection_hazard_level_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="abel"
        android:text="restaurant_hazardLevel"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/updated_favourite_newest_inspection_hazard_level_icon"
        app:layout_constraintEnd_toStartOf="@+id/updated_favourite_newest_inspection_hazard_level_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/updated_favourite_newest_inspection_date"
        app:layout_constraintTop_toTopOf="@+id/updated_favourite_newest_inspection_hazard_level_icon" />

    <ImageView
        android:id="@+id/updated_favourite_newest_inspection_hazard_level_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updated_favourite_name"
        app:srcCompat="@drawable/haz_low" />

    <TextView
        android:id="@+id/updated_favourite_newest_inspection_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="abel"
        android:text="updated_favourite_newest_inspection_date"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/updated_favourite_icon"
        app:layout_constraintTop_toBottomOf="@+id/updated_favourite_name" />

    <TextView
        android:id="@+id/updated_favourite_name"
        android:layout_width="278dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:fontFamily="abel"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="restaurant_name"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/updated_favourite_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/updated_favourite_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurant_icon_general" />
</androidx.constraintlayout.widget.ConstraintLayout>